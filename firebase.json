{
  "hosting": {
    "public": ".",
    "headers": [
      {
        "source": "/sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "/manifest.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
      ".vs/**",
      ".vscode/**",
      "*.esproj",
      "*.slnx",
      "package.json",
      "package-lock.json",
      "CHANGELOG.md",
      "README.md",
      "generate-icons.html",
      ".firebaserc"
    ]
  }
}
